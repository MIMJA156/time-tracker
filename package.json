{
  "name": "time-tracker-app",
  "displayName": "Mimjas Time Tracker",
  "description": "Logs the amount of time you spend coding. (This is a Personal Project and not meant to be perfect)",
  "version": "0.2.2",
  "publisher": "MIMJA156",
  "repository": {
    "type": "git",
    "url": "https://github.com/MIMJA156/time-tracker.git"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:openFile"
  ],
  "main": "./extension.js",
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
	"fs": "^0.0.1-security"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported":true
    }
  },
	"contributes": {
		"configuration": [
			{
        "title": "Mimjas Time Tracker",
        "properties": {
          "Icon Style": {
						"type": "string",
            "default": "circuit-board",
						"description": "Type in the default codicon ID for the icon you want.\nList of icons -> https://code.visualstudio.com/api/references/icons-in-labels#icon-listing",
						"scope": "application"
					},
          "Label Position": {
            "type": "string",
            "enum": [
              "Left",
              "Right"
            ],
            "default": "Left",
            "description": "Defines the position on the time label."
          },
          "Label Priority":{
						"type": "boolean",
						"default": "false",
						"description": "Is high priority"
          }
        }
			}
		]
	}
}
